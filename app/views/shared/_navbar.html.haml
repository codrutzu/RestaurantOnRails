        = image_tag "logo.svg"
      .logo-text
        %div EUREKA
        %div CAFFE
  %nav
    %ul
      %li
        %a{href: "#"} HOME
      %li
        %a{href: "#"} ABOUT
      %li
        %a{href: "#"} SERVICE
      %li
        %a{href: "#"} BLOG
      %li
        %a{href: "#"} CONTACTS
