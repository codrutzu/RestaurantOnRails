<div class="products-wrapper">
  <div class="plates">
    <ul id="products">
      <% @products.each do |product|%>
        <li>
          <p> <%= image_tag product.image, class: "plate-img" %></p>
          <p class="dish"> <%= product.title %></p>
          <p class="meal-type"> <%= product.description %></p>
          <p class="price">$ <%= product.price %></p>
        </li>
      <% end %>
    </ul>
  </div>
</div>
