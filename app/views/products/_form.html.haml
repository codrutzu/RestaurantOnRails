.form 
  %h1 Add a new product
  = form_for @product do |form| 
    .fields
      .field
        = form.label :title 
        = form.text_field :title
      .field
        = form.label :descrption
        = form.text_field :description
      .field 
        = form.label :price
        = form.number_field :price
      .field
        = form.label :image
        = form.file_field :image
      .actions
        = form.submit
