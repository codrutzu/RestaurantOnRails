= provide(:title, 'Cart')
- if @cart.products.count != 0
  .cart-page
    .cart-page-wrapper
      .cart-container
        %header
          .header-left
            %p QTY
            %p ITEM
          .header-right
            %p PRICE
        .products-container
          - @cart.products.uniq.each do |product|
            .product-wrapper
              .product-left
                = link_to '#' do
                  = image_tag 'minus.svg', class: 'delete-one'
                %p.quantity= no_of_products(product)
                = link_to '#' do
                  = image_tag 'plus.svg', class: 'add-one'
                %p.tite= product.title
              .product-right
                %p.price= "$ #{product.price}"
          .cart-footer
            .total
              %p Total:
              #total-sum= "$ #{@cart.products.sum(:price)}"
            = link_to 'CHECKOUT', '#', class: 'btn btn-primary'
      -# .illustration
      = image_tag 'cart-illustration.png'
- else
  .empty-wrapper
    .empty-container
      = image_tag 'empty_cart.png'
      %h1 Empty Cart
      %p Look like you haven't made your choice yet...
      = link_to 'Back to menu', root_path, class: 'btn btn-primary'
